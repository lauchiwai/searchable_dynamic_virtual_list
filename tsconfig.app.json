{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": [
      "vite/client",
      "@vue/runtime-core"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "vue-virtual-scroller": [
        "./src/types/vue-virtual-scroller.d.ts"
      ],
    }
  }
}